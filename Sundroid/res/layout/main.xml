<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/weather_background"
    android:isScrollContainer="true">
    <TableLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:stretchColumns="0"
     >
     <TableRow
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">
               <TextView  
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Enter Zipcode"
			   android:textColor="#ff000000"
			   android:textSize="15sp"
               android:gravity="left"
               />
          
          <CheckBox
				android:id="@+id/chk_usecelsius"
				android:text="Check to use Â°C"
				android:textColor="#ff000000"
				android:textSize="15sp"
				android:layout_x="8px"
				android:layout_y="17px"
				android:gravity="right">
		</CheckBox>
         
        </TableRow>
    </TableLayout>
    <TableLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:stretchColumns="0"
     >
     <TableRow
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">
               
               <EditText android:id="@+id/edit_input"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:singleLine="true"
               android:text="97124"/>
          <Button android:id="@+id/cmd_submit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="OK"
          />
     </TableRow>
    </TableLayout>
         
    <sundroid.code.views.SingleWeatherInfoView
     android:id="@+id/weather_today"
     android:orientation="horizontal"
          android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:gravity="center_horizontal"
     android:paddingTop="15px"
     />

      
    <TableLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:stretchColumns="0,1,2,3"
     android:paddingTop="15px"
     >
          <TableRow
                    android:layout_height="wrap_content" android:layout_width="wrap_content" android:scrollbars="horizontal">
               <sundroid.code.views.SingleWeatherInfoView
                    android:id="@+id/weather_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"/>
               <sundroid.code.views.SingleWeatherInfoView
                    android:id="@+id/weather_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    />
              
               </TableRow>
               <TableRow >
                <sundroid.code.views.SingleWeatherInfoView
                    android:id="@+id/weather_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    />
               <sundroid.code.views.SingleWeatherInfoView
                    android:id="@+id/weather_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    />
               </TableRow>
                <TableRow >
                <sundroid.code.views.SingleWeatherInfoView
                    android:id="@+id/weather_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    />
                </TableRow>
               
               
    </TableLayout>
    <TextView android:id="@+id/txt_ans" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Suggestion for the day"></TextView>
   
</LinearLayout>


